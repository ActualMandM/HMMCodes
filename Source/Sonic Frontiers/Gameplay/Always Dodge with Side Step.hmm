Code "Always Dodge with Side Step" in "Gameplay" by "Hyper" does "Always makes Sonic dodge left or right instead of side stepping whilst not running."
//
    #include "BlackboardStatus" noemit

    #lib "Memory"
    #lib "Player"

    static bool _isInitialised = false;
    static bool _isDodgeLegal = false;
//
{
    if (!_isInitialised)
    {
        fixed (bool* p_isDodgeLegal = &_isDodgeLegal)
        {
            /* 0x1409D07B6 */
            long sig = ScanSignature
            (
                "\x0F\x29\x70\xE8\x48\x8B\x49\x28\xBA\x05\x00\x00\x00\x0F\x29\x78\xD8\xE8\xCC\xCC\xCC\xCC\x84\xC0\x0F\x84\xBE\x02\x00\x00",
                "xxxxxxxxxxxxxxxxxx????xxxxxxxx"
            );

            if (sig == 0)
                return;
            
            WriteAsmHook
            (
                $@"
                    movaps xmmword ptr [rax - 0x18], xmm6
                    mov    rcx, qword ptr [rcx + 0x28]
                    mov    edx, 5
                    movaps xmmword ptr [rax - 0x28], xmm7
                    mov    rax, {(long)p_isDodgeLegal}
                    cmp    byte ptr [rax], 0
                    jne    exit
                    mov    rax, {Memory.ReadJump(sig + 0x18)}
                    jmp    rax
                exit:
                ",

                sig,

                HookBehavior.Replace
            );
        }

        _isInitialised = true;
    }

    _isDodgeLegal = !IS_WORLD_FLAG(IsCyberSpace) &&
        !IS_WORLD_FLAG(IsAutoRun) &&
        !IS_WORLD_FLAG(IsOutOfControl) &&
        Player.Kinematics.GetHorizontalMagnitude() >= 15.0f;

    SET_COMBAT_FLAG(IsSideStep, _isDodgeLegal);
}