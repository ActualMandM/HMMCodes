    {
        for (int i = 0; i < 2; i++)
            RFL_SET_PARAM(KnucklesParametersInfo, forwardView.modePackage.boost.blurPowers[i], 0.0f);
    }

    var TailsParametersInfo = Reflection.GetDataInfo<TailsParameters.Root>("tails_common");

